{
  "name": "be-creative-sd",
  "version": "1.0.0",
  "description": "BE Creative SD - Full-stack E-Commerce Platform",
  "main": "server.js",
  "type": "module",
  "engines": {
    "node": "24.x"
  },
  "scripts": {
    "start": "node server.js",
    "build": "npm run install:all && npm run frontend:build",
    "prebuild": "echo 'Installing dependencies...'",
    "postinstall": "npm run frontend:install 2>/dev/null || true",
    "backend:install": "cd backend && npm install",
    "backend:dev": "cd backend && npm run dev",
    "backend:start": "cd backend && npm start",
    "frontend:install": "cd frontend && npm install",
    "frontend:start": "cd frontend && npm start",
    "frontend:build": "cd frontend && npm run build",
    "install:all": "npm install && npm run backend:install && npm run frontend:install",
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:start\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "stripe": "^12.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
